          <% end %>
          <div style="position:relative;">
                <span class="lightgray_txtdark mrg-L5 mrg-T5" style="position:relative;">
                  <input type="text" class="inputbox_2 outline-none" placeholder="Location">
                </span>
            <div class="listboxs display-none">
              <ul>
                <li>Redmond</li>
                <li>Redding</li>
                <li>Red Rover</li>
                <li>Red Herring</li>
              </ul>
            </div>
          </div>
          <a href="#" class="float-R edit_icn" ><img src="/assets/edit_icon2.png" width="11" height="10" alt="edit"></a>
        </div>
    <% else %>
        <div class="input_block mrg-T10 mrg-B10 pad-B5">
          <div style="position:relative;">
                <span class="lightgray_txtdark mrg-L5 mrg-T5" style="position:relative;">
                  <input type="text" class="inputbox_2 outline-none" placeholder="All locations">
                </span>
            <div class="listboxs display-none">
              <ul>
                <li>Redmond</li>
