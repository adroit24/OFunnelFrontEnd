<!DOCTYPE HTML>
<html>
<head>
  <title>OFunnel</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link href='/favicon.ico' rel='icon' type='image/x-icon' />
  <%= stylesheet_link_tag    "application.html5", :media => "all" %>
  <%= stylesheet_link_tag    "public", :media => "all" %>
  <%= stylesheet_link_tag    "responsive", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="//app.payboard.com/Widget/v1.0/Payboard.js"></script>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
      var userId = '<%= current_user_id %>'
      var userName = '<%= user_name %>'
      var userFirstName = '<%= user_first_name %>';
      var userLastName = '<%= user_last_name %>';
      var userEmail = '<%= user_email %>';
      <% if session[:track_login_event] %>
      var trackLoginEvent = true;
      <%
      session[:track_login_event] = nil
      end
      %>
      <% if session[:track_alert_event] %>
      var trackAlertEvent = true;
      <%
      session[:track_alert_event] = nil
      end
      %>
  </script>

  <script>
      if (window!= top)
          top.location.href=location.href
  </script>

</head>
<body>
<div class="wrapper">
  <!-- START MAIN DIV-->
  <div class="main clearfix">
    <!-- START HEADER -->
    <div class="header">
      <div class="logo_menu_box">
        <a href="<%= alerts_path %>" id="sitelogo"><img class="logo" src="/assets/logo.jpg" width="238" height="71" alt="OFunnel" title="OFunnel" /></a>
        <div class="userstatus-box width-auto">
          <div class="signout-box">
            <div class="links mrg-T20" style="float: right;">
              <a href="<%= notifications_path %>#alert-history">Alerts</a>
              <a href="<%= logout_path %>">Log out</a>
            </div>
          </div>
        </div>
      </div>
    </div><!-- END HEADER -->
  </div><!-- END MAIN DIV-->

  <!-- START MOBILE MAIN DIV-->
  <div class="mobile-main clearfix">
    <!--start mobile container white-->
    <%= yield %>
    <!--end mobile container white-->
  </div><!-- END MOBILE MAIN DIV-->

  <!-- START FOOTER -->
  <div class="footer">
    <div class="footer_box">
            <span id="web-footer-menu">
                <span class="col-gray all-box"> Contact us at <a href="mailto:info@ofunnel.com" class="col-white"  style="text-decoration: underline;"> info@ofunnel.com    </a> </span>
                <br />
                <span class="all-box col-gray font-15 "> Â© 2013 OFunnel &nbsp;&nbsp;  | &nbsp;&nbsp;  <a href="<%= Settings.logout_redirect %>/terms.html" class="col-white" style="text-decoration: underline;"> Terms &amp; Conditions   </a> </span>
            </span>
      <div class="social-icon-box">
        <a href="http://www.facebook.com/ofunnel" target="_blank" class="facebook-icon"></a>
        <a href="http://www.twitter.com/ofunnel" target="_blank" class="twitter-icon"></a>
        <a href="http://www.linkedin.com/company/ofunnel" target="_blank" class="linkedin-icon"></a>
      </div>
    </div>
  </div><!-- START FOOTER -->

</div>
<% if Rails.env.production? %>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-45620534-1', 'ofunnel.com');
        ga('send', 'pageview');

    </script>
<% end %>
</body>
</html>
