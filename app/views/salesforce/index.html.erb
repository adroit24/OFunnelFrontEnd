<!DOCTYPE HTML>
<html>
<head>
  <title>OFunnel</title>
  <%
     @active_tab = cookies.signed[:tab]
     @theme = cookies.signed[:theme]
     @user_name = cookies.signed[:userName]
     @query = cookies.signed[:query]
  %>
  <%= stylesheet_link_tag    "public", :media => "all" %>
  <%= stylesheet_link_tag    "hootsuite", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="//app.payboard.com/Widget/v1.0/Payboard.js"></script>
  <%= csrf_meta_tags %>

  <script type="text/javascript">
      <% if session[:track_login_event] %>
      var trackLoginEvent = true;
      <%
      session[:track_login_event] = nil
      end
      %>
  </script>
</head>
<body class="bg-none">
<div class="maincontainer">
  <div class="hs_stream">
    <div class="hs_topBarSpace"></div>
    <div>
      <div style="margin: 22px auto 0; width: 275px;">
        <img class="logo" src="/assets/logo.jpg" width="275px"  alt="OFunnel" title="OFunnel" />
      </div>
      <div style="margin: 13px auto; width: 275px;">
        <div class="disc-intro-box">
          <a href="#" id="linkedin-login" class="in-btn" style="width: 100% !important;margin: 0 !important; height: 66px !important;" target="OFunnel" onclick="window.open('<%= salesforce_authorize_url %>', '', 'width=550,height=700');return false;" style="width: 275px;"> <span>Use LinkedIn to sign <br> up for OFunnel Alerts</span></a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-45620534-1', 'ofunnel.com');
    ga('send', 'pageview');

</script>
</body>
</html>
